<header class="header">
    <div class="container header-content">
        <div class="logo PokeCamp">
            <a href="/"><img src="/assets/images/logo.png" alt="PokeCamp Logo"></a>
        </div>
        <nav class="main-nav">
            <ul>
                 <%# Link para a Home %>
                <li><a href="/">HOME</a></li>
                 <%# Link para a página de Download %>
                <li><a href="/download">DOWNLOAD</a></li>
                  <%# Link para a página de Ranking %>
                <li><a href="/ranking">RANKING</a></li>
                  <%# Link para a página mapa %>
                 <li><a href="/mapa">MAPA</a></li>
                 <%# Link para a página suporte%>
                 <li><a href="/suporte">suporte</a></li>
                 <%# <li><a href="/shop">SHOP</a></li> %>
                <%# Links para páginas de conteúdo que você pode ter %>
                 <%# <li><a href="/news">NOTÍCIAS</a></li> %>
                 <%# <li><a href="/community">COMUNIDADE</a></li> %>
            </ul>
        </nav>
        <div class="login-section">
            <!-- Novo Dropdown de Conta -->
            <div class="account-dropdown">
                <button class="dropdown-toggle" aria-label="Menu da Conta">
                     <i class="fas fa-user-circle"></i> <!-- Ícone de usuário -->
                     Conta <i class="fas fa-chevron-down dropdown-arrow"></i> <!-- Seta para baixo -->
                </button>
                <div class="dropdown-menu">
                    <% if (user) { %>
                        <!-- Se logado: Dashboard e Sair -->
                        <a href="/dashboard" class="dropdown-item"><%= user.name %></a> <%# Link para a Dashboard com o nome do usuário %>
                        <a href="/logout" class="dropdown-item">Sair</a> <%# Link para Logout %>
                    <% } else { %>
                        <!-- Se não logado: Login e Criar Conta -->
                        <a href="/login" class="dropdown-item">Login</a> <%# Link para Login %>
                        <a href="/register" class="dropdown-item">Criar Conta</a> <%# Link para Registro %>
                    <% } %>
                </div>
            </div>

            <!-- Language Dropdown (Mantido) -->
            <div class="language-dropdown">
                <button class="dropdown-toggle" aria-label="Selecionar idioma">
                    <img id="selected-flag" src="/assets/images/flag-br.png" alt="Bandeira do Brasil">
                    <span id="selected-lang-code">PT</span>
                    <img class="dropdown-arrow" src="/assets/svg/arrow-down.svg" alt="Seta para baixo">
                </button>
                <div class="dropdown-menu">
                    <a href="#" data-lang="br" data-code="PT"><img src="/assets/images/flag-br.png" alt="Português"> PT</a>
                    <a href="#" data-lang="us" data-code="EN"><img src="/assets/images/flag-us.png" alt="English"> EN</a>
                    <a href="#" data-lang="es" data-code="ES"><img src="/assets/images/flag-es.png" alt="Español"> ES</a>
                    <a href="#" data-lang="de" data-code="DE"><img src="/assets/images/flag-de.png" alt="Deutsch"> DE</a>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Script para o Dropdown do Header -->
<script src="/js/header.js"></script>